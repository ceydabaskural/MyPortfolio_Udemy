@model List<MyPortfolio_Udemy.DAL.Entities.Message>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 1;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Messages</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Inbox</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            The activities related to the messages can be done by using the panel below :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Sender</th>
                                    <th scope="col">Subject</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Message Details</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToShortDateString()</td>
                                        <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-outline-warning">Message Details</a></td>

                                        @if (item.IsRead == false)
                                        {
                                            <td><a href="/Message/ChangeIsReadToTrue/@item.MessageId" class="btn btn-info">Mark as Read</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Message/ChangeIsReadToFalse/@item.MessageId" class="btn btn-dark">Mark as Unread</a></td>
                                        }
                                        <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>