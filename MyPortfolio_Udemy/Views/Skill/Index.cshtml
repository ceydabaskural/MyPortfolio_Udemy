@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 1;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Skill</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Skill List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            The activities related to the skill can be done by using the panel below :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-outline-warning">Delete</a></td>
                                        <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-success">Update</a></td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                        <a href="/Skill/CreateSkill/" class="btn btn-primary">Create</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>