@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 1;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Experiences</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Experiences List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            The activities related to the experiences can be done by using the panel below :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Headline</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Head</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-warning">Delete</a></td>
                                        <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-success">Update</a></td>
                                    </tr>
                                    count++;
                                }
                                </tbody>
                            </table>
                            <a href="/Experience/CreateExperience/" class="btn btn-primary">Create</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
